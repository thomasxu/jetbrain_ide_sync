<keymap version="1" name="Default copy" parent="$default">
  <action id="$Cut">
    <keyboard-shortcut first-keystroke="ctrl x" />
  </action>
  <action id="CloseAllUnpinnedEditors">
    <keyboard-shortcut first-keystroke="shift ctrl w" />
  </action>
  <action id="EditorCut">
    <keyboard-shortcut first-keystroke="ctrl x" />
  </action>
  <action id="EditorDeleteLine">
    <keyboard-shortcut first-keystroke="ctrl y" />
    <keyboard-shortcut first-keystroke="shift delete" />
  </action>
  <action id="EditorUnSelectWord" />
  <action id="HideAllWindows">
    <keyboard-shortcut first-keystroke="shift ctrl f12" />
    <keyboard-shortcut first-keystroke="ctrl alt w" />
  </action>
  <action id="Refresh">
    <keyboard-shortcut first-keystroke="ctrl f5" />
    <keyboard-shortcut first-keystroke="ctrl enter" />
  </action>
</keymap>